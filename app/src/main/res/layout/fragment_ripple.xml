<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rkzk.android.bblmaterialdesign.fragments.RippleFragment"
    android:padding="8dp"
    android:clipToPadding="false">

    <com.rkzk.android.bblmaterialdesign.customviews.RippleLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mrl_rippleOverlay="true"
        app:mrl_rippleColor="@color/accentColor"
        app:mrl_rippleAlpha="0.3"
        app:mrl_rippleHover="true"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:text="@string/title_ripple_text"
                android:layout_gravity="center"/>

        </RelativeLayout>

    </com.rkzk.android.bblmaterialdesign.customviews.RippleLayout>

</FrameLayout>
